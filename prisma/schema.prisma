generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String    @id @default(cuid())
    firstName     String
    lastName      String
    password      String
    email         String    @unique
    emailVerified DateTime?
    image         String?
    boards        Board[]
    Task          Task[]
}

model Board {
    id      String   @id @default(cuid())
    slug    String   @unique
    ownerId String
    members User[]
    Status  Status[]
    Task    Task[]
}

model Status {
    id      String @id @default(cuid())
    name    String
    board   Board  @relation(fields: [boardId], references: [id])
    boardId String
    Task    Task[]
}

model Task {
    id          String  @id @default(cuid())
    board       Board   @relation(fields: [boardId], references: [id])
    boardId     String
    status      Status? @relation(fields: [statusId], references: [id])
    statusId    String?
    member      User?   @relation(fields: [userId], references: [id])
    userId      String?
    type        Type
    description String
    number      Int     @unique @default(autoincrement())

    updatedAt DateTime @default(now())
    createdAt DateTime @updatedAt
}

enum Type {
    STORY
    TASK
    BUG
}
